<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="medidas_sale_order" model="ir.ui.view">
        <field name="name">medidas.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree/field[@name='qty_invoiced']" position="after">
                <field name="alto" optional="show"/>
                <field name="ancho" optional="show"/>
            </xpath>
        </field>
    </record>

    <template id="sale_order" inherit_id="sale.report_saleorder_document">
        <xpath expr="//th[@name='th_quantity']" position="after">
            <th name="th_medidas" class="text-center">Medidas</th>
        </xpath>
        <xpath expr="//td[@name='td_quantity']" position="after">
            <td name="td_quantity" class="text-center">
                <span t-field="line.medidas"/>
            </td>
        </xpath>
    </template>

    <record id="ir_cron_auto_post_draft_entry" model="ir.cron">
        <field name="name">Actualizar plantillas</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">1</field>
        <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_sale_order"/>
        <field name="code">model.actualizar_plantilla()</field>
        <field name="state">code</field>
    </record>

    <template id="sale_order_portal_content_inherit_sale_medidas" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//section[@id='details']//table[@id='sales_order_table']/thead/tr/th[2]" position="after">
            <th class="text-center">Medidas</th>
        </xpath>
        <xpath expr="//section[@id='details']//table[@id='sales_order_table']/tbody//t[@t-if='not line.display_type']/td[2]" position="after">
            <td class="text-center">
                <span t-field="line.medidas"/>
            </td>
        </xpath>
    </template>


